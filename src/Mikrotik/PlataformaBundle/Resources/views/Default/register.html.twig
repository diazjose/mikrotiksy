{% extends 'base.html.twig' %}
          
{% block body %}
	
	<div class="content">
            <div class="container-fluid">
                <div class="row">
                    <div class="col-lg-8 col-md-7">
                        <div class="card">
                            <div class="header">
                                <h4 class="title">Registrar Usuario</h4>
                            </div>
                            <div class="content">
                                {{ form_start(form)}}
                                    <div class="row">
                                        <div class="col-md-5">

                                          <div class="form-group">
              {{ form_row(form.username, {'attr' : {'class' : 'form-control border-input', 'placeholder' : 'Usuario'} }) }}
          </div>
                                        </div>
                                        <div class="col-md-3">
                                            <div class="form-group">
            {{ form_row(form.email, {'attr' : {'class' : 'form-control border-input', 'placeholder' : 'Ingrese Email'} }) }}
          </div>
                                        </div>
                                        <div class="col-md-4">
                                            <div class="form-group">
            {{ form_row(form.role, {'attr' : {'class' : 'form-control border-input'} }) }}
          </div>
                                        </div>
                                    </div>

                                    <div class="row">
                                        <div class="col-md-6">
                                            <div class="form-group">
            {{ form_row(form.plainPassword.first, {'attr' : {'class' : 'form-control border-input', 'placeholder' : 'Contraseña'} }) }}
          </div>
                                        </div>
                                        <div class="col-md-6">
                                            <div class="form-group">
             {{ form_row(form.plainPassword.second, {'attr' : {'class' : 'form-control border-input', 'placeholder' : 'Repetir Contraseña'} }) }}
          </div>
                                        </div>
                                    </div>

                                    <div class="row">
                                        <div class="col-md-12">
                                            <div class="form-group">
             {{ form_row(form.isActive, {'attr' : {'class' : 'form-control border-input'} }) }}
          </div>
                                        </div>
                                    </div>

                                    
                                    <div class="text-center">
                                        <button type="submit" class="btn btn-info btn-fill btn-wd">Guardar Usuario</button>
                                    </div>
                                    
                                {{ form_end(form) }}
                            </div>
                        </div>
                    </div>



                </div>                
            </div>
        </div>

	
{% endblock %}